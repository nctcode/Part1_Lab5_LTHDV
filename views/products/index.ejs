<%- include("../partials/header") %>
    <h2>Products</h2>
    <a href="/products/new" class="btn btn-success mb-3">Add Product</a>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Supplier</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(p => { %>
                <tr>
                    <td>
                        <%= p.name %>
                    </td>
                    <td>
                        <%= p.address %>
                    </td>
                    <td>
                        <%= p.phone %>
                    </td>
                    <td>
                        <%= p.supplierId ? p.supplierId.name : "N/A" %>
                    </td>
                    <td>
                        <a href="/products/edit/<%= p._id %>" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/products/delete/<%= p._id %>" method="get" style="display:inline">
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <%- include("../partials/footer") %>