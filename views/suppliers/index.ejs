<%- include("../partials/header") %>
    <h2>Suppliers</h2>
    <a href="/suppliers/new" class="btn btn-success mb-3">Add Supplier</a>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% suppliers.forEach(s => { %>
                <tr>
                    <td>
                        <%= s.name %>
                    </td>
                    <td>
                        <%= s.address %>
                    </td>
                    <td>
                        <%= s.phone %>
                    </td>
                    <td>
                        <a href="/suppliers/edit/<%= s._id %>" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/suppliers/delete/<%= s._id %>" method="post" style="display:inline">
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
    <%- include("../partials/footer") %>